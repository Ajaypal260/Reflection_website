---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<BaseLayout title="Home">
  <section>
    <h1 style="font-size: 1.5rem; font-weight: 400; margin-bottom: 0.5rem;">
      Reflections
    </h1>
    <p style="font-size: 1rem; color: #737373; margin-bottom: 3rem;">
      On religion, philosophy, and ideas worth thinking about.
    </p>
    
    {posts.map((post) => (
      <article style="margin-bottom: 2.5rem;">
        <a href={`/blog/${post.slug}/`} style="font-size: 1.25rem; font-weight: 500; text-decoration: none;">
          {post.data.title}
        </a>
        <p class="post-meta" style="margin-top: 0.25rem; margin-bottom: 0.5rem;">
          <time datetime={post.data.pubDate.toISOString()}>
            {post.data.pubDate.toLocaleDateString('en-US', {
              year: 'numeric',
              month: 'short',
              day: 'numeric',
            })}
          </time>
        </p>
        <p style="font-size: 1rem; color: #525252; line-height: 1.6;">
          {post.data.description}
        </p>
      </article>
    ))}
  </section>
</BaseLayout>
