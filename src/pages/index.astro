---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<BaseLayout title="Home">
  <section style="margin-bottom: 4rem;">
    <h1 style="font-size: 2rem; font-weight: 600; margin-bottom: 1rem;">Welcome</h1>
    <p style="font-size: 1.125rem; color: #525252;">
      A collection of reflections on religion, philosophy, and intellectual topics.
    </p>
  </section>

  <section>
    <h2 style="font-size: 1.25rem; font-weight: 600; margin-bottom: 1.5rem;">Recent Posts</h2>
    
    {posts.map((post) => (
      <article class="post-list-item">
        <h2>
          <a href={`/blog/${post.slug}/`}>{post.data.title}</a>
        </h2>
        <p class="post-meta">
          <time datetime={post.data.pubDate.toISOString()}>
            {post.data.pubDate.toLocaleDateString('en-US', {
              year: 'numeric',
              month: 'long',
              day: 'numeric',
            })}
          </time>
        </p>
        <p>{post.data.description}</p>
      </article>
    ))}
  </section>
</BaseLayout>
